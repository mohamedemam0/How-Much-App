<Page x:Class="How_Much_App.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:How_Much_App"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="#FF24BB8B">

    <Page.BottomAppBar>
        <CommandBar ClosedDisplayMode="Compact"
                    RequestedTheme="Light">
            <AppBarButton x:Name="ClearButn"
                          Click="ClearBtn_Click"
                          Icon="Cancel"
                          Label="Clear" />
            <AppBarButton x:Name="LoadButn"
                          Click="LoadBtn_Click"
                          Icon="Refresh"
                          Label="Load" />
            <AppBarButton x:Name="CalculateButn"
                          Click="CalculateBtn_Click"
                          Icon="Calculator"
                          Label="Calculate" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*" />
            <RowDefinition Height="88*" />
            <RowDefinition Height="171*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="24,0,0,0.5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="69*" />
                <ColumnDefinition Width="307*" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="PageTitle"
                       Style="{ThemeResource HeaderTextBlockStyle}"
                       Text="How Much?"
                       Grid.Column="1"
                       Margin="10 0 0 0" />
            <Image x:Name="IconImage"
                   Source="ms-appx:///Assets/150x150.png" />
        </Grid>

        <StackPanel Grid.Row="1"
                    Margin="10,9.5,10,310"
                    Grid.RowSpan="2">
            <TextBox x:Name="NametxtBox"
                     PlaceholderText="Name...." />
            <TextBox x:Name="PricetxtBox"
                     PlaceholderText="Price...."
                     InputScope="NumberFullWidth"/>
            <Button x:Name="InsertBtn"
                    Content="Insert"
                    Click="InsertBtn_Click"
                    HorizontalAlignment="Stretch" />
        </StackPanel>


        <ListView x:Name="HistoryList"
                  Grid.Row="2"
                  Margin="10 0 10 10"
                  IsItemClickEnabled="True"
                  Background="#FFB2E0D1"
                  SelectionMode="None"
                  SelectionChanged="HistoryList_SelectionChanged" Tapped="HistoryList_Tapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Grid>
                            <TextBlock TextWrapping="WrapWholeWords"
                                       Text="{Binding DataName}"
                                       Style="{ThemeResource ListViewItemTextBlockStyle}"
                                       HorizontalAlignment="Left"
                                       Margin="20 0 0 0"
                                       Foreground="Black"/>

                            <TextBlock TextWrapping="WrapWholeWords"
                                       Text="{Binding DataPrice}"
                                       Style="{ThemeResource ListViewItemTextBlockStyle}"
                                       HorizontalAlignment="Right"
                                       Margin="0 0 20 0"
                                       Foreground="#FF24BB8B"/>
                        </Grid>
                        <TextBlock Text="{Binding DateTime}"
                                   FontSize="14"
                                   FontWeight="Thin"
                                   Foreground="Black"
                                   Margin="20 0 0 0" />
                        <Line  Fill="Black"
                               X1="10"
                               X2="100"
                               Y1="10"
                               Y2="10"
                               StrokeThickness="1"
                               Stroke="Black"
                               Stretch="Fill"
                               Margin="0 3 0 0" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Image Source="ms-appx:///Assets/coins15-white.png"
               Grid.RowSpan="2"
               Margin="-154,84.5,254,-84"
               Grid.Row="1"
               Opacity="0.2" />


    </Grid>
</Page>
